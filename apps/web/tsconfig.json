{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/tests/*": ["./tests/*"],
      "@/components/*": ["./components/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"],
  /* Cypress */
  "types": [
    "cypress",
    "@testing-library/cypress",
    "jest",
    "@testing-library/jest-dom"
  ]
}
