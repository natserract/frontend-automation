{
  "name": "frontend-automation",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "typescript": "turbo run typescript -- --noEmit",
    "prettier": "pretty-quick --ignore-path .eslintignore --branch next",
    "prettier:all": "prettier --write . --ignore-path .eslintignore",
    "prepare": "husky"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "danger": "^12.3.0",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "pretty-quick": "^4.0.0",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.15.8",
  "engines": {
    "node": ">=18",
    "pnpm": "8.15.8"
  }
}
